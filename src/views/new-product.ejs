<h1 class="mt-5 mb-4 text-center">Add New Product</h1>

<% if(errormessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errormessage %>
    </div>
<%}%>

<form action="/" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <input type="text" class="form-control" placeholder="Product Name" id="name" name="name" >
    </div>
    <div class="mb-3">
        <textarea class="form-control" id="desc" placeholder="Product Description" name="desc" rows="3" ></textarea>
    </div>
    <div class="mb-3 w-50">
        <input type="number" class="form-control" placeholder="Price" id="price" name="price" step="0.01">
    </div>
    <div class="mb-3 d-flex form-control w-50 align-items-center">
        <label for="imgurl" class="form-label me-2 ">Image URL:</label>
        <input type="file" name="imgurl" id="imgurl" accept="images/*" />
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>