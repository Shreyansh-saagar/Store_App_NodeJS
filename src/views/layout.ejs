</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Store App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <% if(locals.userEmail) {%>
                <li class="nav-item">
                  <a class="nav-link" href="/">Products</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/new">Add Products</a>
                </li>
              <%}%>
              
            </ul>
            <form class="d-flex" role="search">
                <% if(locals.userEmail) {%>
                  <a href="/logout" class="btn btn-danger me-2 ">Logout</a>
                <%} else{%>
                <a href="/login" class="btn btn-primary me-2 ">Login</a>
                <a href="/register" class="btn btn-warning ">Register</a>
                <%}%>
            </form>
          </div>
        </div>
      </nav>

      <!-- hero section -->
      <div class="container con-img p-2 ">
        <img src="https://th.bing.com/th/id/OIP.Cbhuws9VyyYAqM4vYtMV2QHaD4?w=1200&h=628&rs=1&pid=ImgDetMain" class="rounded mx-auto my-3 w-50 shadow-lg d-block" alt="...">
      </div>

      <!-- product table -->
      <div class="container p-2">
        <!-- placeholder for rendering other ejs files -->
        <%-body%>
      </div>

      <!-- footer -->
      <footer class="footer mt-auto py-2 bg-dark">
        <div class="container text-light">
            <div class="row">
              <div class="col-md-6">
                <h3 class="font-weight-bold">Store App</h3>
                <p>Your description goes here. This could include contact information, links, or anything else you want to share with your visitors.</p>
              </div>
            </div>
        </div>
      </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>

    <script src="main.js"></script>
