        <%if(locals.lastVisit){%>
          <div class="alert alert-primary" role="alert">
            Your last visit is on: <%= lastVisit %>
          </div>
        <%}%>
        <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <!-- Ejs template for dynamic data insertion -->
              <% products.forEach(product => { %>
                <tr>
                  <th scope="row"><%= product.id %></th>
                  <td><%= product.name %></td>
                  <td>
                    <%= product.desc %>
                  </td>
                  <td scope="col"><%= product.price %></td>
                  <td>
                      <img src= "<%= product.imgurl %>"  alt="<%= product.name %>" style="max-width: 100px; max-height: 130px;" />
                  </td>
                  <td class="d-flex">
                    <a href="/update-product/<%= product.id %>" class="my-5 mx-1 btn btn-warning">Update</a>
                    <button class="btn btn-danger my-5 mx-1" onclick="deleteProduct('<%= product.id %>')">
                      Delete
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>